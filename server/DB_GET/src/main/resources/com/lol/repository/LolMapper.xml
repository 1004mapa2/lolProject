    <insert id="saveComment" parameterType="com.lol.dto.Combination_Comment">
        INSERT INTO COMBINATION_COMMENT(ID, COMSAVEID, USERNAME, CONTENT, WRITETIME)
        VALUES(COMBINATION_COMMENT_AUTOINC.NEXTVAL, #{comsaveId}, #{username}, #{content}, #{writeTime})
    </insert>

    <select id="getComment" parameterType="int" resultType="com.lol.dto.Combination_Comment">
        SELECT * FROM COMBINATION_COMMENT WHERE COMSAVEID= #{comsaveId} ORDER BY ID DESC OFFSET #{page} ROWS FETCH NEXT #{numberOfPage} ROWS ONLY
    </select>

    <select id="getMaxPage" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM COMBINATION_COMMENT WHERE COMSAVEID= #{comsaveId}
    </select>
